<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.CrearContactoPage">

    <FlexLayout Direction="Column" AlignItems="Start" JustifyContent="Center" Padding="20">
        <Entry x:Name="entryNombre" Placeholder="Nombre" WidthRequest="250" />
        <Entry x:Name="entryCorreo" Placeholder="Correo" WidthRequest="250" />
        <Entry x:Name="entryTelefono" Placeholder="Teléfono" WidthRequest="250" />
        <Entry x:Name="entryDireccion" Placeholder="Dirección" WidthRequest="250" />

        <Button Text="Guardar Contacto" WidthRequest="250" Clicked="OnGuardarClicked" />
    </FlexLayout>
</ContentPage>